apiVersion: v1
kind: ConfigMap
metadata:
  name: DEPLOY-NAME
data:
  providerConfig: |
    application: isdapp
    lifetimeMinutes: 4
    gitops: true
    passScore: 90
    serviceList: 
    - metricScopeVariables: "${namespace_key},${pod_key},${app_name}"
      baselineMetricScope: "isd,.*{{env.STABLE_POD_HASH}}.*,DEPLOY-LABEL"
      canaryMetricScope: "isd,.*{{env.LATEST_POD_HASH}}.*,DEPLOY-LABEL"
      metricTemplateName: "prometheus-health-validator"
      serviceName: DEPLOY-NAME
